{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <h3>{{ record.title}}</h3>
            </div>
            <div class="col-md-2">
                <div class="row" style="margin-right: 0px;justify-content: flex-end">
                    <a href="{{ asset("admin/create/#{record.id}") }}"><button class="btn btn-success" style="margin-right: 5px">Edit</button></a>
                    <a href="{{ asset("admin/delete/#{record.id}") }}"><button class="btn btn-danger">Delete</button></a>
                </div>
            </div>
        </div>
        <hr>
        <div class="row justify-content-between no-gutters">
            {% if (record.image) %}
                <div class="col-md-4">
                    <img src="{{ record.image }}" class="img" alt="{{ record.image }}">
                </div>
                <div class="col-md-7">
                    {% if(record.quote) %}
                        <blockquote class="blockquote"><span style="font-style: italic">"{{ record.quote }}"</span></blockquote>
                    {% endif %}
                    <p>Start Datum: {{ record.date|date('Y-m-d') }}</p>
                    <h6>Beschrijving:</h6>
                    <p>
                        {{ record.description }}
                    </p>
                    <p class="likes">{{ record.likes }} Likes!</p>
                </div>
            {% else %}
                <div class="col-md-10">
                    {% if(record.quote) %}
                        <blockquote class="blockquote"><span style="font-style: italic">"{{ record.quote }}"</span></blockquote>
                    {% endif %}
                    <p>Start Datum: {{ record.date|date('Y-m-d') }}</p>
                    <h6>Beschrijving:</h6>
                    <p>
                        {{ record.description }}
                    </p>
                </div>
            {% endif %}
            </div>
            <hr>
            <p><small class="text-muted">Created at: {{ record.createdAt|date('Y-m-d H:i:s') }}</small></p>
        <hr>
        <div class="row">
            <h3>Comments</h3>
        </div>
        {% if (error is same as('')) %}
            {% for comment in comments %}
                <div class="row">
                    <div class="card card-container" style="width: 100%">
                        <div class="card-header" style="width: 100%">
                            Comment #{{ loop.index }}
                        </div>
                        <div class="card-body">
                            <blockquote class="blockquote mb-0">
                                <p>{{ comment.description }}</p>
                                <footer class="blockquote-footer">{{ comment.name }}</footer>
                            </blockquote>
                        </div>
                        <div class="card-footer text-muted">
                            {{ comment.timeAgo }}
                            {{ comment.created_at_slug }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="row">
                <p>{{ error }}</p>
            </div>
        {% endif %}
        {{ knp_pagination_render(comments) }}
    </div>
{% endblock %}

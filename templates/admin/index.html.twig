{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-10">
                <h3>Alle Kampen</h3>
            </div>
            <div class="col-2">
                <a href="{{ path('admin.create') }}"><button class="btn btn-primary" id="createButton">Maak nieuw kamp!</button></a>
            </div>
        </div>
        <hr>
        {% for record in records %}
            <div class="row">
                    <div class="card col-12 card-container">
                        <div class="row no-gutters">
                            {% if (record.image) %}
                                <div class="col-md-4">
                                    <img src="{{ record.image }}" class="card-img" alt="{{ record.image }}">
                                </div>
                                <div class="col-md-6">
                                    <div class="card-body">
                                        <h5 class="card-title">{{ record.title }}</h5>
                                        {% if(record.quote) %}
                                            <blockquote class="blockquote"><span style="font-style: italic">"{{ record.quote }}"</span></blockquote>
                                        {% endif %}
                                        <p class="card-text">Start Datum: {{ record.date|date('Y-m-d') }}</p>
                                        <h6 class="card-text">Beschrijving:</h6>
                                        <p class="card-text">
                                            {% if (record.description|length > 130) %}
                                                {{ record.description|slice(0, 130) }}...
                                            {% else %}
                                                {{ record.description }}
                                            {% endif %}
                                        </p>
                                        <p class="likes">{{ record.likes }} Likes!</p>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="row" style="margin-top: 20px; justify-content: flex-end;margin-right: 0px">
                                        <a href="{{ asset("admin/create/#{record.id}") }}"><button class="btn btn-success" style="margin-right: 5px">Edit</button></a>
                                        <a href="{{ asset("admin/delete/#{record.id}") }}"><button class="btn btn-danger">Delete</button></a>
                                    </div>
                                </div>
                            {% else %}
                                <div class="col-md-10">
                                    <div class="card-body">
                                        <h5 class="card-title">{{ record.title }}</h5>
                                        {% if(record.quote) %}
                                            <blockquote class="blockquote"><span style="font-style: italic">"{{ record.quote }}"</span></blockquote>
                                        {% endif %}
                                        <p class="card-text">Start Datum: {{ record.date|date('Y-m-d') }}</p>
                                        <h6 class="card-text">Beschrijving:</h6>
                                        <p class="card-text">
                                            {% if (record.description|length > 300) %}
                                                {{ record.description|slice(0, 300) }}...
                                            {% else %}
                                                {{ record.description }}
                                            {% endif %}
                                        </p>
                                        <p class="likes">{{ record.likes }} Likes!</p>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="row" style="margin-top: 20px; justify-content: flex-end;margin-right: 0px">
                                        <a href="{{ asset("admin/create/#{record.id}") }}"><button class="btn btn-success" style="margin-right: 5px">Edit</button></a>
                                        <a href="{{ asset("admin/delete/#{record.id}") }}"><button class="btn btn-danger">Delete</button></a>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="row">
                                <div class="col-md-10">
                                    <p class="card-text"><small class="text-muted">Created at: {{ record.createdAt|date('Y-m-d H:i:s') }}</small></p>
                                </div>
                                <div class="col-md-2">
                                    <div class="row" style="justify-content: flex-end">
                                        <a href="{{ asset("/admin/kamp/#{record.id}") }}"><button class="btn btn-primary">Bekijk kamp!</button></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
        {% endfor %}
        {{ knp_pagination_render(records) }}
    </div>
{% endblock %}
